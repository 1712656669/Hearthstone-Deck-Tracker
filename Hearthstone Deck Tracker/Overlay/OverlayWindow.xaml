<Window x:Class="Hearthstone_Deck_Tracker.Overlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hearthstone_Deck_Tracker.Overlay"
        mc:Ignorable="d"
        Topmost="True" ShowInTaskbar="False"
        BorderBrush="Red" BorderThickness="1"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True"
        Closing="OnClosing" SourceInitialized="OnSourceInitialized"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="OverlayWindow" Height="300" Width="300">
    <ContentControl Content="{Binding ActiveScene}"/>
</Window>
